<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="StorageControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:StorageControls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Grid>

        <local:PercentageRing x:Name="percentRing" Value="{x:Bind testSlider.Value, Mode=TwoWay}" Width="320" Height="320"/>

        <Slider x:Name="testSlider" Minimum="{x:Bind percentRing.Minimum}" Maximum="{x:Bind percentRing.Maximum}" Width="480" SmallChange="{x:Bind percentRing.SmallChange}" LargeChange="{x:Bind percentRing.LargeChange}" StepFrequency="{x:Bind percentRing.SmallChange}"/>

    </Grid>
</Window>
