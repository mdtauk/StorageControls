<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:StorageControls">

    <Style BasedOn="{StaticResource DefaultPercentageRingStyle}" TargetType="local:PercentageRing" />

    <Style x:Key="DefaultPercentageRingStyle" TargetType="local:PercentageRing">
        <Setter Property="Width" Value="160" />
        <Setter Property="Height" Value="160" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="LargeChange" Value="1" />
        <Setter Property="SmallChange" Value="0.01" />
        <Setter Property="TrackRingThickness" Value="10" />
        <Setter Property="MainRingThickness" Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PercentageRing">
                    <Viewbox Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}"
                             Stretch="UniformToFill"
                             UseLayoutRounding="True">
                        <Canvas x:Name="PART_RingCanvas"
                                Width="160"
                                Height="160"
                                Background="Transparent">
                            <Path x:Name="PART_ScalePath"
                                  Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round" />

                            <Path x:Name="PART_TrailPath"
                                  Stroke="{ThemeResource DividerStrokeColorDefaultBrush}"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>