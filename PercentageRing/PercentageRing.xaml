<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:StorageControls">

    <Style TargetType="local:PercentageRing">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="LargeChange" Value="1" />
        <Setter Property="SmallChange" Value="0.01" />
        <Setter Property="TrailThickness" Value="10" />
        <Setter Property="ScaleThickness" Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PercentageRing">
                    <Viewbox Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}"
                             Stretch="UniformToFill"
                             UseLayoutRounding="True">
                        <Canvas x:Name="PART_RingCanvas"
                                Width="160"
                                Height="160"
                                Background="DarkBlue">
                            <Path x:Name="PART_ScalePath"
                                  Stroke="Red"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Triangle" />

                            <Ellipse x:Name="PART_ScaleDot"
                                     Canvas.Left="65"
                                     Canvas.Top="0"
                                     Width="{TemplateBinding ScaleThickness}"
                                     Height="{TemplateBinding ScaleThickness}"
                                     Fill="Yellow"
                                     Opacity="1"
                                     RenderTransformOrigin="0.5, 0.5"
                                     Visibility="Collapsed">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="PART_ScaleDotScaleTransform" CenterX="0.5" CenterY="0.5" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <Path x:Name="PART_TrailPath"
                                  Stroke="Gray"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Triangle" />

                            <Ellipse x:Name="PART_TrailDot"
                                     Canvas.Left="45"
                                     Canvas.Top="17"
                                     Width="{TemplateBinding TrailThickness}"
                                     Height="{TemplateBinding TrailThickness}"
                                     Fill="Cyan"
                                     Opacity="1"
                                     RenderTransformOrigin="0.5, 0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="PART_TrailDotScaleTransform" CenterX="0.5" CenterY="0.5" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>