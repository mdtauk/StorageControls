<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:StorageControls">

    <Style BasedOn="{StaticResource DefaultPercentageRingStyle}" TargetType="local:PercentageRing" />

    <Style x:Key="DefaultPercentageRingStyle" TargetType="local:PercentageRing">
        <Setter Property="Width" Value="160" />
        <Setter Property="Height" Value="160" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="LargeChange" Value="1" />
        <Setter Property="SmallChange" Value="0.01" />
        <Setter Property="MainRingPadding" Value="0" />
        <Setter Property="TrackRingPadding" Value="10" />
        <Setter Property="TrackRingThickness" Value="10" />
        <Setter Property="MainRingThickness" Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PercentageRing">
                    <Viewbox Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}"
                             Stretch="UniformToFill"
                             UseLayoutRounding="True">

                        <!--  Canvas used for the rings  -->
                        <Canvas x:Name="PART_RingCanvas"
                                Width="160"
                                Height="160"
                                Background="Transparent">
                            <Canvas.Resources>
                                <Storyboard x:Name="UpdateValueAnimation" />
                            </Canvas.Resources>

                            <!--  Path used for the Main ring  -->
                            <Path x:Name="PART_MainPath"
                                  Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round">
                                <Path.Data>
                                    <PathGeometry x:Name="MainPathGeometry">
                                        <PathFigure x:Name="MainPathFigure" />
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!--  Path used for the Track ring  -->
                            <Path x:Name="PART_TrackPath"
                                  Stroke="{ThemeResource ControlStrongStrokeColorDefault}"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round">
                                <Path.Data>
                                    <PathGeometry x:Name="TrackPathGeometry">
                                        <PathFigure x:Name="TrackPathFigure" />
                                    </PathGeometry>
                                </Path.Data>
                            </Path>



                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>